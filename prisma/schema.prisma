generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ScanLog {
  id          String   @id @default(uuid()) @db.Uuid
  key         String
  year        String
  pedimento   String
  description String
  line        String
  shelf       String
  position    String
  quantity    Int?
  encoded     Boolean?
  type        String
  createdAt   DateTime @default(now())

  @@map("scan_logs")
}

model InventorySession {
  id        String           @id @default(uuid()) @db.Uuid
  name      String
  createdAt DateTime         @default(now())
  items     InventoryItem[]
}

model InventoryItem {
  id          String           @id @default(uuid()) @db.Uuid
  sessionId   String           @db.Uuid
  session     InventorySession @relation(fields: [sessionId], references: [id])

  key         String
  year        String
  pedimento   String
  description String
  line        String
  shelf       String
  position    String
  quantity    Int
  encoded     Boolean             @default(false)
  stock       Int?

  createdAt   DateTime         @default(now())

  @@unique([sessionId, key])
  @@map("inventory_items")
}

model StockItem {
  id         String   @id @default(uuid()) @db.Uuid
  key        String   @unique
  stock      Int
  updatedAt  DateTime @updatedAt
  createdAt  DateTime @default(now())

  @@map("stock_items")
}
